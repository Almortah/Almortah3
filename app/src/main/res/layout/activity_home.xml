<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="150dp"
    tools:context="com.almortah.almortah.HomeActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo_noname" />

        <ImageView
            android:id="@+id/toArabic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/saudi" />

        <ImageView
            android:id="@+id/toEnglish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/uk" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/app_name"
        android:textColor="@color/colorBlue"
        android:textSize="44sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/signAlmortah"
        android:textColor="@color/colorGreen"
        android:textSize="14sp"
        android:textStyle="normal|bold" />


    <Button
        android:id="@+id/guestButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorBlue"
        android:text="@string/guest"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/signinButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorGreen"
        android:text="@string/login"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/submitOwner"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/colorDarkGrey"
        android:text="@string/register"
        android:textColor="@color/colorWhite" />


</LinearLayout>
