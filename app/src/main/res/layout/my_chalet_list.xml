<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pick_white"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/cardColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/manage"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/chaletImg"
                    android:background="@color/colorBlue"
                    android:text="@string/manage"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/pick_white"/>

                <ImageView
                    android:id="@+id/chaletImg"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/testchalet" />

                <TextView
                    android:id="@+id/chaletName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/promotion"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="TEST"
                    android:textColor="@color/pick_white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/manage"
                    android:layout_alignStart="@+id/manage"
                    android:layout_below="@+id/promotion"
                    android:background="@color/colorDarkGrey"
                    android:text="@string/delete"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/pick_white"/>
                <Button
                    android:id="@+id/promotion"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/manage"
                    android:layout_alignStart="@+id/manage"
                    android:layout_below="@+id/manage"
                    android:background="@color/colorGreen"
                    android:text="@string/promotion"
                    android:textColor="@color/pick_white"
                   />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/logo_noname"
                    android:padding="5dp"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>